<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.open.terminal.openterminal.ConnectionDialogController"
            styleClass="dialog-root"
            stylesheets="@./css/connection-dialog.css"
            prefWidth="420"
            prefHeight="400">

    <center>
        <VBox alignment="CENTER" spacing="0" styleClass="dialog-content-container">
            <!-- 顶部标题 -->
            <Label text="新建连接" styleClass="dialog-title"/>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <padding>
                    <Insets top="25" right="30" bottom="25" left="30"/>
                </padding>

                <!-- 连接名称 -->
                <Label text="连接名称" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField"
                           promptText="例如: 生产服务器"
                           styleClass="form-field"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- 主机地址 -->
                <Label text="主机地址" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="hostField"
                           promptText="例如: 192.168.1.100"
                           styleClass="form-field"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- 端口 -->
                <Label text="端口" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="portField"
                           text="22"
                           styleClass="form-field"
                           prefWidth="80"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- 用户名 -->
                <Label text="用户名" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="userField"
                           promptText="例如: root"
                           styleClass="form-field"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- 密码 -->
                <Label text="密码" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <PasswordField fx:id="passField"
                               promptText="••••••"
                               styleClass="form-field"
                               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- 列约束 -->
                <columnConstraints>
                    <ColumnConstraints minWidth="70" halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                </columnConstraints>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="dialog-button-bar">
            <padding>
                <Insets top="15" right="30" bottom="25" left="30"/>
            </padding>
            <Button text="取消"
                    onAction="#handleCancel"
                    styleClass="secondary-button-large"/>

            <Button text="连接"
                    onAction="#handleConnect"
                    styleClass="primary-button-large"/>
        </HBox>
    </bottom>

</BorderPane>