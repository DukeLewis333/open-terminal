<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.open.terminal.openterminal.MainController"
            styleClass="main-root"
            stylesheets="@./css/main-window.css">

    <!-- 顶部工具栏 -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="app-header">
            <Label text="你是最好的程序员！" styleClass="app-motto">
                <!-- 字体定义移至CSS -->
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- 中心区域 -->
    <center>
        <TabPane fx:id="tabPane"
                 tabClosingPolicy="ALL_TABS"
                 styleClass="main-tab-pane">
            <tabs>
                <!-- 特殊的添加按钮 Tab -->
                <Tab fx:id="newConnectionTab"
                     text="+"
                     closable="false"
                     styleClass="plus-tab"/>
            </tabs>
        </TabPane>
    </center>

</BorderPane>